{
  "manifest_version": 3,
  "name": "Wordpress Admin Bar Control",
  "version": "2.0.0",
  "description": "Hide & show the admin bar with one easy click!",
  "icons": {
    "128": "img/icon128.png"
  },
  "action": {
    "default_icon": {
      "19": "img/icon19_0.png",
      "38": "img/icon38_0.png"
    },
    "default_title": "WP Admin Bar Hider"
  },
  "background": {
    "service_worker": "lib/brain.js"
  },
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "short_name": "WP Admin Bar Hider"
}
